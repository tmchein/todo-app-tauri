{
  "name": "todo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "biome lint --write",
    "postinstall": "pnpm simple-git-hooks",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged && pnpm typecheck",
    "commit-msg": "pnpm exec commitlint --edit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome lint --write"
    ]
  },
  "dependencies": {
    "@adobe/react-spectrum": "3.45.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "preact": "^10.25.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@preact/preset-vite": "^2.9.3",
    "@tauri-apps/cli": "^2",
    "lint-staged": "^16.2.6",
    "simple-git-hooks": "^2.13.1",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
